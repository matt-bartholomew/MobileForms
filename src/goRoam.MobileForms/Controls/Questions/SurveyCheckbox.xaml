<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="goRoam.MobileForms.Controls.Questions.SurveyCheckbox"
    RowSpacing="0" ColumnSpacing="0" Margin="0,-5,0,5" Padding="4">
    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="3*" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Label x:Name="label" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" Margin="0,0,0,0"/>
    <Switch x:Name="checkBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,0" />
    <Label x:Name="helper" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />
</Grid>
